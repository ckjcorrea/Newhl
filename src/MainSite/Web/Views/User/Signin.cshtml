@{
    ViewBag.Title = "Sign In";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section headerPlugins
{
    <script src="@Url.Content("~/Scripts/UI/SignIn.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            $("#signinButton").click(function () {
                SignIn.SubmitLogin();
            });
        });
    </script>
}
<section class="main__middle__container">
    <div class="container">
        <div id="ctlx2" class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Sign in with your Newhl account</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <section class="col-md-8 main-content">
                        <form id="loginForm" action="/User/ProcessSignIn" method="post">
                            @Html.AntiForgeryToken()
                            <div class="form-group ">
                                <label for="first-name">Email: *</label>
                                <input required type="text" class="form-control" id="userName" name="userName" />
                            </div>
                            <div class="form-group ">
                                <label for="first-name">Password: *</label>
                                <input type="password" class="form-control" id="password" name="password" />
                            </div>
                            <br />
                            <div id="footerSection">
                                <button id="signinButton" class="btn btn-primary">Sign In</button>
                                <div>
                                    <span>Not a user? <a href="/User/Register">click here</a> to sign up.</span>
                                </div>
                            </div>
                        </form>
                </div>
                <div id="divForgotPassword" class="forgotPasswordSection">
                    <a id="btnResetPassword" tabindex="6" href="/User/ForgotPassword">Forgot your password?</a><br />
                </div>
            </div>
        </div>
    </div>
</section>


