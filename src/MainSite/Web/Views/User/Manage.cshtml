@model Newhl.MainSite.Common.DomainModel.AMFUserLogin
@{
    ViewBag.Title = "User Management";
}
@section headerPlugins
{
    <script type="text/javascript">
        $(document).ready(function () {
            $("#saveButton").click(function () {
                $("#saveForm").submit();
                alert("Your information has been updated.");
            });

            $("#makePaymentButton").click(function () {
                window.location.href = "/Payments/Season";
            });

            $("#addProgramButton").click(function () {
                window.location.href = "/Programs/Index";
            });

        });
    </script>
}
<section class="main__middle__container">
    <div class="container">
        <p>&nbsp;</p>
        <div id="ctlx2" class="panel panel-primary">
            <div class="panel-heading">
                <h3 class="panel-title">Welcome @this.Context.User.Identity.Name</h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-sm-8">
                        <form id="saveForm" action="/User/Edit/@Model.Id" method="post">
                            <input type="hidden" name="id" id="id" value="@Model.Id" />
                            @{
                                Html.RenderPartial("_UserDetails", Model);
                            }
                            <br />
                            <button type="button" id="saveButton" class="btn btn-primary">Save My Info</button>
                        </form>
                    </div>
                    <div class="col-sm-4">
                        <p>To register for available programs, click below
                            <br /><button type="button" id="addProgramButton" class="btn btn-primary">Manage Programs</button>
                        </p>
                        <p>
                            To make payments for your programs, click below<br />
                            <button type="button" id="makePaymentButton" class="btn btn-primary">Manage Payments</button>                            
                        </p>
                        
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


